node[whitewater=put_in] { icon-image: http://dev.openseamap.org/josm/icons/put_in16.png; }
node[whitewater=egress] { icon-image: http://dev.openseamap.org/josm/icons/egress16.png; }
node[whitewater="egress;put_in"], node[whitewater="put_in;egress"] { icon-image: http://dev.openseamap.org/josm/icons/put_in_egress16.png; }
node[whitewater=hazard] { icon-image: http://dev.openseamap.org/josm/icons/hazard16.png; }
node[whitewater=rapid], node[whitewater:rapid_grade] { icon-image: http://dev.openseamap.org/josm/icons/rapid16.png; }

way[whitewater:section_grade=~/0/] { width: 6; color: #0080ff; }
way[whitewater:section_grade=~/1|1+/] { width: 6; color: #00d400; }
way[whitewater:section_grade=~/2|2-|2+/] { width: 6; color: #ffd400; }
way[whitewater:section_grade=~/3|3-|3+/] { width: 6; color: #ff8000; }
way[whitewater:section_grade=~/4|4-|4+/] { width: 6; color: #ff0000; }
way[whitewater:section_grade=~/5|5-|5+/] { width: 6; color: #8000ff; }
way[whitewater:section_grade=~/6|6-/] { width: 6; color: #ff00ff; }
