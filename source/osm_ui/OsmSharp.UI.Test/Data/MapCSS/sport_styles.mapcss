*[sport=water_sports] { icon-image: http://dev.openseamap.org/josm/icons/sports.png; }
*[sport=canoeing] { icon-image: http://dev.openseamap.org/josm/icons/canoeing.png; }
*[sport=fishing] { icon-image: http://dev.openseamap.org/josm/icons/fishing.png; }
*[sport=kite_surfing] { icon-image: http://dev.openseamap.org/josm/icons/kitesurfing.png; }
*[sport=rowing] { icon-image: http://dev.openseamap.org/josm/icons/rowing.png; }
*[sport=sailing] { icon-image: http://dev.openseamap.org/josm/icons/sailing.png; }
*[sport=scuba_diving] { icon-image: http://dev.openseamap.org/josm/icons/scub_diving.png; }
*[sport=surfing] { icon-image: http://dev.openseamap.org/josm/icons/surfing.png; }
*[sport=swimming] { icon-image: http://dev.openseamap.org/josm/icons/swimming.png; }
